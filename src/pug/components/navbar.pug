//- Config to build the navbar
-
  let pages = [
    {
      title: 'Home',
      url: '/',
      child: []
    },
    {
      title: 'About',
      url: '/about',
      child: []
    }
  ]

mixin navbar
  nav#main-menu
    ul
      each page in pages
        li
            a(href=page.url itemprop="name")= page.title
              if page.child.length > 0
                ul 
                  each page2 in page.child
                    li: a(href= page2.url)= page2.title